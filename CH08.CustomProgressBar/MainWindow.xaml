<Window x:Class="CH08.CustomProgressBar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <ProgressBar Height="30" Value="60" Margin="20"
                     Template="{StaticResource pt1}" x:Name="pb1" />
        <ProgressBar Height="30" Value="60" Margin="20" />

        <CheckBox Content="Indeterminate" FontSize="16" Margin="4"
                  IsChecked="{Binding IsIndeterminate, ElementName=pb1}" />

    </StackPanel>
</Window>
