<Window x:Class="CH06.DataGridDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CH06.DataGridDemo"
        xmlns:sys="clr-namespace=System,assembly=mscorlib"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>

        <ObjectDataProvider x:Key="genderEnum" MethodName="GetValues" ObjectType="{x:Type local:Gender}"><!--ObjectType="{x:Type sys:Type=Enum}"-->
            <ObjectDataProvider.MethodParameters>
                <x:Type Type="local:Gender" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition  />
        </Grid.RowDefinitions>
        
        <DataGrid ItemsSource="{Binding}">
        </DataGrid>
        
        <DataGrid ItemsSource="{Binding}" Grid.Row="1" AutoGeneratingColumn="DataGrid_AutoGeneratingColumn_1" AutoGeneratedColumns="DataGrid_AutoGeneratedColumns_1">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Avatar">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Margin="2" Width="32" Height="32" Source="{Binding Avatar}" />    
                                <TextBlock Text="Test" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <DataGrid ItemsSource="{Binding}" Grid.Row="2" AutoGenerateColumns="False">            
            <DataGrid.Columns>
                <DataGridComboBoxColumn Header="Gender"
                                        SelectedItemBinding="{Binding Gender}"
                                        ItemsSource="{Binding Source={StaticResource genderEnum}}"/>
                <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" />
                <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" />
                <DataGridTemplateColumn Header="Email" >
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <Hyperlink NavigateUri="{Binding Email}"
                                Click="OnSendEmail">
                                <Run Text="{Binding Email, Mode=OneWay}" />
                                </Hyperlink>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridCheckBoxColumn Header="Employed?" Binding="{Binding IsEmployed}" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>

</Window>
