<Window x:Class="CH05.OwnerWindows.ToolsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ToolsWindow" Height="300" Width="300" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Grid>
        <ToolBar FontSize="20">
            <RadioButton Content="Pointer" Margin="4" IsChecked="True"/>
            <RadioButton Content="Pencil" Margin="4"/>
            <RadioButton Content="Brush" Margin="4"/>
            <RadioButton Content="Eraser" Margin="4"/>
            <RadioButton Content="Selection" Margin="4"/>
        </ToolBar>
    </Grid>
</Window>
